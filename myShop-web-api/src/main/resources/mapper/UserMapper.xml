<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiecl.myShop.web.api.dao.APIUserDao">

    <sql id="tbuserColumn">
          tbuser.id,
          tbuser.username,
          tbuser.password,
          tbuser.phone,
          tbuser.email,
          tbuser.created,
          tbuser.updated
    </sql>

    <select id="login" resultType="TbUser">
        SELECT
        <include refid="tbuserColumn"></include>
        FROM tb_user AS tbuser
        WHERE tbuser.username=#{username} OR tbuser.phone=#{username} OR tbuser.email=#{username}
    </select>
    <insert id="insertUser">

INSERT INTO `myshop`.`tb_user`
	(
	`username`,
	`password`,
	`phone`,
	`email`,
	`created`,
	`updated`
	)
	VALUES
	(
        #{username},
        #{password},
        #{phone},
        #{email},
        #{created},
        #{updated}
	)
    </insert>


    <select id="selectByphone" resultType="Tbuser">
         SELECT
          <include refid="tbuserColumn"></include>
          FROM tb_user AS tbuser
          WHERE tbuser.phone=#{phone}
    </select>
    <select id="selectByPhoneOrNameOrEmail" resultType="Tbuser">
        SELECT
        <include refid="tbuserColumn"></include>
        FROM tb_user AS tbuser
        WHERE tbuser.phone=#{phone} or tbuser.email=#{phone} or tbuser.username=#{phone}
    </select>
</mapper>